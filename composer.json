{
    "name": "nrep/table-forge",
    "description": "Schema-driven table/data grid builder for PHP - Framework agnostic with sorting, filtering, and pagination",
    "type": "library",
    "license": "MIT",
    "keywords": ["table", "datagrid", "builder", "schema", "php", "tailwind", "sorting", "pagination"],
    "authors": [
        {
            "name": "NREP",
            "email": "info@nrep.rw"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "TableForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TableForge\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
